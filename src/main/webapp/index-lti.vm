                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <h1 class="navbar-brand collapse-nav">
                  <a ng-if="view !==''"  ng-click="changeView('')"  href="#ltihome">U-M Course Manager</a>
                  <span ng-if="view ===''" >U-M Course Manager</span>
                </h1>
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav navbar-right">
                  <li ng-if="ltiLaunch.role_is_account_admin ==='true'">
                    <a ng-if="view !=='Sub Account Administrator Utils'" class="collapse-nav" ng-click="changeView('Sub Account Administrator Utils')"  href="#saa">Acct Admin Tools</a>
                    <span ng-if="view ==='Sub Account Administrator Utils'" class="navbar-text">Acct Admin Tools</span>
                  </li>
                  <li>
                    <a  ng-if="view !=='Grades'"  class="collapse-nav" ng-click="changeView('Grades')"  href="#grades">Gradebook CSV Formatter</a>
                    <span ng-if="view ==='Grades'" class="navbar-text">Gradebook CSV Formatter</span>
                   </li>
                  <li>
                    <a href="" class="collapse-nav" id="helpLink" data-url="help-lti.html">Help</a>
                  </li>
                </ul>
            </div>
            <!-- /.navbar-collapse -->
        </div>
    </nav>
<br><br><br>
    <div ng-view></div>
    <script src="vendor/jquery/jquery-1.11.0.min.js"></script>
    <script src="vendor/jquery/jquery-ui-1.11.2/jquery-ui.min.js"></script>
    <script src="assets-lti/vendor/angular/angular.min.js">
    </script>
    <script src="vendor/angular/angular-route.js">
    </script>
    <script src="assets-lti/vendor/angular/angular-animate.min.js">
    </script>
    <script src="assets-lti/vendor/angular/angular-aria.min.js">
    </script>
    <script src="vendor/bootstrap/bootstrap.min.js">
    </script>
    <script src="vendor/underscore/underscore-min.js">
    </script>
    <script src="assets-lti/js/utils.js">
    </script>
    <script src="assets-lti/js/app/app.js">
    </script>

    <script src="assets-lti/js/controllers/controllers.js">
    </script>
    <script src="assets-lti/js/factories/factories.js">
    </script>
    <script src="assets-lti/js/filters/filters.js">
    </script>
    <script src="assets-lti/js/services/services.js">
    </script>
    <!-- add user Modal -->
    <div class="modal fade" id="addUserModal" tabindex="-1" role="dialog" aria-labelledby="addUserLabel" aria-hidden="true" ng-controller="addUserController">
      <div class="modal-dialog modal-lg">
        <div ng-include src="'assets-lti/views/friends.html'"></div>
      </div>
    </div>
    <div class="modal fade" id="addBulkUserModal" tabindex="-1" role="dialog" aria-labelledby="addUserLabel" aria-hidden="true" ng-controller="addBulkUserController">
      <div class="modal-dialog modal-lg">
        <!-- <div ng-include src="'assets-lti/views/add_bulk_user.html'"></div> -->

        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">
              <span aria-hidden="true">&times;</span>
              <span class="sr-only">Close</span>
            </button>
            <h3 class="modal-title" id="addUserLabel">Add users to selected sections of {{coursemodal.course_code}}</span></h3>
          </div>
          <div class="modal-body addUserInner" id="addUserInner">
            <div class="well">
              <table class="table" ng-if="success.length">
                <thead>
                  <tr>
                    <th scope="col">Person</th>
                    <th scope="col">Added to section</th>
                    <th scope="col">With role</th>
                  </tr>
                </thead>
                <tbody>
                  <tr ng-repeat = "suc in success |  orderBy:['user','section']">
                    <td>{{suc.user}}</td>
                    <td>{{suc.section}}</td>
                    <td>{{suc.user_role}}</td>
                  </tr>
                </tbody>
              </table>
              <ul>
                <li ng-repeat = "err in errors">
                  {{err.user}} NOT added to section {{err.section}} as {{err.user_role}}
                </li>
              </ul>

                <ul class="container-fluid">
                    <li data-course-id="{{coursemodal.id}}">
                      <div ng-show="newUserList || newUserList.length" class="pull-right">
                        <button type="button" class="btn btn-default" ng-click="redoBulkUsers()">
                          Start over
                        </button><br>
                      </div>

                      <h4>Provide  the data.<br><small>Format: 3 columns, first name, last name, email address. Header first row: first_name, last_name, email.<br> <span ng-show="!showTextArea && !newUserList" >  <a href="" ng-click="showTextArea = !showTextArea">Or paste in text with the same format.</a></span> <span ng-show="showTextArea && !newUserList"> <a href="" ng-click="showTextArea = !showTextArea">Or upload a CSV with same format.</a></span></small> <br> </h4>
                      <div class="input-group" ng-show="!showTextArea">
                        <label class="input-group-btn">
                          <span class="btn"  ng-class="bulkfilename? 'btn-success': 'btn-primary'">
                            Browse...
                            <i class="glyphicon glyphicon-upload" ng-show="!bulkfilename"></i> <i class="glyphicon glyphicon-ok" ng-show="bulkfilename"></i>
                            <input class="sr-only" id="trim-file" type="file" name="files" style="display:inline" file-model="bulkfile">
                          </span>
                        </label>
                        <input type="text" class="form-control" readonly="" value="{{bulkfilename}}">
                      </div>
                      <br>
                      <div ng-show="!newUserList && showTextArea">
                        <div class="form-group">
                          <label for="userList" class="sr-only">
                            Add users, one per line. Upload a CSV file. <a href="" ng-click="showTextArea = !showTextArea">Or upload a CSV with the same format.</a>
                          </label>
                          <textarea placeholder="Paste header and user rows, one per line in the specified format" ng-model="coursemodal.rawUserList" class="form-control" name="users" id="userList" rows="8"></textarea>
                        </div>
                        <div class="form-group">
                          <button class="btn btn-primary" ng-click="parseUserList()">Lookup users</button>
                        </div>
                      </div>
                      <div class="alert alert-warning" ng-if="newUserListTooLong">
                        More than 50 user names detected.
                      </div>
                      <div class="alert alert-warning" ng-if="failedValidationList.length">
                        Following email addresses are not valid and are not included in the lists below: <br> <strong>{{failedValidationList.join(', ')}}</strong>
                      </div>
                      <div class="alert alert-info" ng-if="lookingUpUsersWait">Looking up users - this may take a while.</div>
                      <div  ng-if="newUsersNotExist.length" class="panel panel-default">
                        <div class="panel-heading"><h4>New users <br><small>UM-Friend account will be created (if it does not exist), Canvas account will be created and it will be added to section.</small></h4></div>
                        <div class="panel-body">
                          <table class="table" style="margin-bottom:0">
                          <thead>
                            <tr>
                              <th scope="col">Email</th>
                              <th scope="col">First name</th>
                              <th scope="col">Last name</th>
                            </tr>
                          </thead>
                          <tbody>
                            <tr ng-repeat="newUser in newUsersNotExist track by $index">
                              <th scope="row">
                                {{newUser.email}}
                              </th>
                              <td>
                                {{newUser.first_name}}
                              </td>
                              <td>
                                {{newUser.last_name}}
                              </td>
                            </tr>
                          </tbody>
                        </table>
                        </div>
                      </div>
                      <div  ng-if="newUsersExist.length" class="panel panel-default">
                        <div class="panel-heading"><h4>Existing users <br><small>Will be added to selected section.</small></h4></div>
                        <div class="panel-body">
                          <table class="table" style="margin-bottom:0">
                          <thead>
                            <tr>
                              <th scope="col">Id</th>
                              <th scope="col">First name</th>
                              <th scope="col">Last name</th>
                            </tr>
                          </thead>
                          <tbody>
                            <tr ng-repeat="newUser in newUsersExist track by $index">
                              <th scope="row">
                                {{newUser.email}}
                              </th>
                              <td>
                                {{newUser.first_name}}
                              </td>
                              <td>
                                {{newUser.last_name}}
                              </td>
                            </tr>
                          </tbody>
                        </table>
                        </div>
                      </div>
                      <div ng-if="newUsersExistNoName.length"  class="panel panel-default">
                        <div class="panel-heading"><h4>Existing users that had no name in Canvas <br><small>Will be added to selected section after updating their names.</small></h4></div>
                        <div class="panel-body">
                          <table class="table"  style="margin-bottom:0">
                          <thead>
                            <tr>
                              <th scope="col">Id</th>
                              <th scope="col">First name (from file)</th>
                              <th scope="col">Last name (from file)</th>
                            </tr>
                          </thead>
                          <tbody>
                            <tr ng-repeat="newUser in newUsersExistNoName track by $index">
                              <th scope="row">
                                {{newUser.email}}
                              </th>
                              <td>
                                {{newUser.first_name}}
                              </td>
                              <td>
                                {{newUser.last_name}}
                              </td>
                            </tr>
                          </tbody>
                        </table>
                        </div>
                      </div>
                      <div ng-show="newUserList.length">
                        <h4>Select a section to add these users to</h4>
                        <ul class="coursePanel sectionListAddFriend" id="course{{coursemodal.id}}" ng-hide="userExists || newUser || addSuccess">
                              <li ng-repeat="section in coursemodal.sections | orderBy:'name'" class="row section" id="sect{{section.id}}">
                                  <div class="col-md-5 sectionName">
                                      <input type="checkbox" id="c{{section.id}}"
                                        ng-model="section.selected" ng-change="sectionSelectedQuery()">
                                      <label for="c{{section.id}}">{{section.name}}</label>
                                  </div>
                                  <div class="col-md-7">
                                    <div class="btn-group pull-right">
                                      <div>
                                        <label for="s{{section.id}}" class="sr-only">Select role for user in section {{section.name}}</label>
                                        <select id="s{{section.id}}" class="form-control">
                                          <option value="StudentEnrollment">Student</option>
                                          <option ng-if="section.courseRole === 'TeacherEnrollment'" value="TeacherEnrollment">Teacher</option>
                                          <option ng-if="section.courseRole === 'TeacherEnrollment'"  value="TaEnrollment">TA</option>
                                          <option value="ObserverEnrollment">Observer</option>
                                          <option ng-if="section.courseRole === 'TeacherEnrollment'" value="DesignerEnrollment">Designer</option>
                                        </select>
                                      </div>
                                    </div>
                              </li>
                          </ul>
                      </div>

                    </li>
                </ul>
            </div>
          </div>
          <div class="modal-footer">
            <div class="form-group">
              <span ng-hide="newUserList.length">Provide some users above. </span>
              <span ng-hide="coursemodal.sectionSelected || !newUserList.length">Select at least one section.</span>
              <button class="btn btn-primary"
                ng-disabled = "!coursemodal.sectionSelected || !newUserList.length"
                ng-click="processUserLists()">Process users</button>
            </div>
          </div>
        </div>

      </div>
    </div>


    <a aria-hidden="true" href="" style="position:fixed;right:0;top:60px;width:30px" ng-click="showDebug = !showDebug">&nbsp;</a>
    <div aria-hidden="true" ng-show="showDebug" class="alert alert-info">
